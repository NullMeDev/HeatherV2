# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Proxy Configuration (Residential proxy for card checking)
PROXY_HTTP=http://username:password@proxy-host.com:port
PROXY_HTTPS=http://username:password@proxy-host.com:port
RESIDENTIAL_PROXY=http://username:password@proxy-host.com:port

# Stripe Keys (required for various gateways)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_FALLBACK_PK=pk_live_your_stripe_publishable_key
STRIPE_PUBLIC_PK=pk_live_your_public_stripe_key
BALLIANTE_STRIPE_PK=pk_live_balliante_store_key

# WHMCS Marketplace (for CCN gateway)
WHMCS_EMAIL=your_whmcs_email
WHMCS_PASSWORD=your_whmcs_password
WHMCS_STRIPE_PK=pk_live_whmcs_stripe_key

# Blackbox AI (for /bb command)
BLACKBOX_API_KEY=your_blackbox_api_key

# Gateway Test Amounts (USD)
CHARGE1_AMOUNT=0.01
CHARGE2_AMOUNT=0.99
CHARGE3_AMOUNT=2.00
CHARGE4_AMOUNT=1.99
CHARGE5_AMOUNT=5.99

# Network Configuration
REQUEST_TIMEOUT=15
RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
METRICS_FILE=logs/metrics.json

# Features
ENABLE_PROXY=true
ENABLE_MASS_CHECK=true
ENABLE_SMOKE_TESTS=true
